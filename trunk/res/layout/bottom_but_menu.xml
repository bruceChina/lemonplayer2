<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/bottom_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/bot_but"
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:background="#00000000"
        android:orientation="horizontal" >

        <ImageButton
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_margin="5dip"
            android:background="@drawable/ad_def_logo" >
        </ImageButton>

        <ImageButton
            android:id="@+id/bottom_pre_song"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:background="@drawable/but_icon_pre_song" >
        </ImageButton>

        <ImageButton
            android:id="@+id/bottom_pause_song"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:background="@drawable/but_icon_play_song" >
        </ImageButton>

        <ImageButton
            android:id="@+id/bottom_next_song"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:background="@drawable/but_icon_next_song" >
        </ImageButton>
    </LinearLayout>

    <ImageView
        android:id="@+id/progress_bar"
        android:layout_width="0dip"
        android:layout_height="2dip"
        android:layout_alignTop="@id/bot_but"
        android:background="#ffffff" />
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_alignBottom="@id/progress_bar"
        android:background="@drawable/lyric_pics_srch_title_shadow" />

</RelativeLayout>